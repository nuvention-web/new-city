<script>
  function getTodoItems() {
    <!-- var Parse = require('parse'); -->

    <!-- Parse.initialize("gm6GOPZ8j3hv24GsPG7hSNxk90Gou3furT6hUdcb", "GyTTUk2AEFbDaIEtX5l7lDYsZSQMTzb1zmyZPbT5") -->

    var task = Parse.Object.extend("task");
    var query = new Parse.Query(task);
  
    query.find({
      success: function(results) {
        var output = "";
        output += '<div class="row">'

        for (var i = 0; i < results.length; i++) {
          var task_title = results[i].get("title");
          var todo_desc = results[i].get("todo_desc");
          var todo_for_task = results[i].get("todo_for_task");

          output += "<h2>"+task_title+"</h2>";
          output += "<h3>"+todo_desc+"</h3>";
          
          for (var j = 0; j < todo_for_task.length; j++) {
            var todo_item = todo_for_task[i].get("todo_item");

            output += '<input type="checkbox" name="todo" value=false>'+todo_item+'</br>';
          }
        }

        output += '</div>';

        $("#tasklist").html(output);
      },

      error: function(error) {
        console.log("Query Error:"+error.message);
      }
    });
  };

  getTodoItems();
</script>

